{  
    "extends":[  
      "airbnb",
      "plugin:prettier/recommended"
    ],
    "env":{  
      "node":true,
      "mocha": true
    },
    "parser":"babel-eslint",
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules":{  
      "import/no-extraneous-dependencies": [
        "error", {
           "devDependencies": true
        }
    ],
      "no-console": "error",
      "prettier/prettier":[  
        "error",
        {  
          "singleQuote":true
        }
      ]
    }
  }